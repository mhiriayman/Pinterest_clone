{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - {{ pin.title }}
{% endblock %}

{% block body %}
    {{ parent () }}
    <article>
        <h2>{{ pin.title }}</a></h2>
        <p>{{ pin.description }}</p>
    </article>

    <a href="{{ path('app_pin_edit',{id:pin.id}) }}">Edit</a> |
    <a href="#" onclick="event.preventDefault();confirm('Are you sure to delete {{ pin.title }}?') && document.getElementById('js-delete-pin-form').submit();">Delete</a> |
    <a href="{{ path('app_home') }}">Home</a>

    <form id="js-delete-pin-form" action="{{ path('app_pin_delete',{id:pin.id}) }}" method="post" style="display: none">
        <input  name="_method" value="DELETE">
    </form>
{% endblock %}